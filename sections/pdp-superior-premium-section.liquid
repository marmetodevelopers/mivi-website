        ],
        "blocks": [
            {
                "name": "Carousel Block",
                "type": "carousel_block",
                "settings": [
                    {
                        "type":"header",
                        "content": "REPLACE THE THE SETTINGS WITH CUSTOM SETTINGS"
                    },
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "t:sections.slideshow.blocks.slide.settings.image.label"
                      },
                      {
                        "type": "image_picker",
                        "id": "mobile_image",
                        "label": "Mobile Image"
                      },
                    {
                        "type":"product",
                        "id":"product",
                        "label":"Product"
                      }
                ]
            }
        ],
        "presets": [
            {
                "name":"PDP superior premiun"
            }
        ]
    }
{% endschema %} 
 
