                    },
                    {
                        "label": "Center",
                        "value": "tw-text-center"
                    },
                    {
                        "label": "Right",
                        "value": "tw-text-right"
                    }
                ],
                "default": "tw-text-center"
            },
            {
                "type": "text",
                "id": "sub_text",
                "default": "The upgrade with you have been waiting",
                "label": "Sub text"
              },
              {
                "type": "image_picker",
                "id": "desktop_background_image", 
                "label": "Desktop Background image"
              },
